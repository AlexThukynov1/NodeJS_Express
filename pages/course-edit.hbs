<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST">
  <div class="input-field">
    <input placeholder="Course name" name="title" id="title" type="text" class="validate" required value="{{course.title}}"/>
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Input course name"></span>
  </div>

  <div class="input-field">
    <input placeholder="Price" name="price" id="price" type="number" class="validate" required min="1" value="{{course.price}}"/>
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Input price"></span>
  </div>

  <div class="input-field">
    <input placeholder="url image" name="img" id="img" type="text" class="validate" value="{{course.img}}"/>
    <label for="img">Course image url</label>
    <span class="helper-text" data-error="Input url image"></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}">

  <button class="btn waves-effect waves-light" type="submit" name="action">Edit</button>
</form>