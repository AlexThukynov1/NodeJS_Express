<h1>Courses</h1>
{{#if courses.length}}
{{#each courses}}
<div class="row">
    <div class="col s6 offset-s3">
      <div class="card">
        <div class="card-image">
          {{#if img}}
            <img src="{{img}}">
          {{else}}
            <img src="/media/placeholder.png" alt="">
          {{/if}}
        </div>
        <div class="card-content">
            <span class="card-title">{{title}}</span>
          <p class="price">{{price}}</p>
        </div>
        <div class="card-action course-bottom">
          <a href="/courses/{{_id}}" target="_blank">Open</a>
          <a href="/courses/{{_id}}/edit?allow=true">Edit</a>
          <form action="/card/add" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button  type="submit" class="btn btn-primary">Add to card</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
{{else}}
<p>Dont have courses</p>
{{/if}}