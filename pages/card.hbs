<h1>Card</h1>

{{#if courses.length}}
<table>
    <thead>
        <tr>
            <th>Course name</th>
            <th>Count</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each courses}}
        <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
                <button class="btn btn-small">Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<p><strong>Price:</strong><span class="price">{{price}}</span></p>
{{else}}
<p>You haven`t any courses</p>
{{/if}}